<Window x:Class="Project_One.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_One"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Window.Resources>
        <DataTemplate x:Key="CurveListItemTemplate" 
                      DataType="{x:Type local:CurveViewModel}">
            <Grid ShowGridLines="True">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding DisplayFileName}"
                           FontSize="16" Margin="4 2 2 2"></TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding PointCount}"
                           FontSize="16" Margin="4 2 2 2"></TextBlock>
                <Button Grid.Column="0" Grid.Row="1" Content="Select" Focusable="False"
                        Click="SelectCurve_OnClick"></Button>
                <Button Grid.Column="1" Grid.Row="1" Content="Delete" Focusable="False"
                        Click="DeleteCurve_OnClick"></Button>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid x:Name="WindowGrid" ShowGridLines="True" Focusable="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="95*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.Row="0" x:Name="TopPanel"
              ShowGridLines="True" Background="WhiteSmoke">
            <Grid x:Name="FirstTopPanel">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Content="Save" x:Name="SaveCurve"></Button>
            </Grid>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="0" Background="WhiteSmoke">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="◀" x:Name="PrevPartControl"
                    Cursor="Hand" Click="ChangePart" Focusable="False"></Button>
            <TextBlock Grid.Column="1" FontSize="18"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       x:Name="PartTitle">First Part</TextBlock>
            <Button Grid.Column="2" Content="▶" x:Name="NextPartControl"
                    Cursor="Hand" Click="ChangePart" Focusable="False"></Button>
        </Grid>

        <Grid Grid.Column="0" Grid.Row="1" x:Name="CanvasGrid">
            <Canvas x:Name="FirstCanvas" Background="LightGray"
                    ClipToBounds="True"
                    Visibility="Visible"/>
            <Canvas x:Name="SecondCanvas" Background="Blue"
                    ClipToBounds="True"
                    Visibility="Collapsed">
            </Canvas>
            <Canvas x:Name="ThirdCanvas" Background="Green"
                    ClipToBounds="True"
                    Visibility="Collapsed">
            </Canvas>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="1" x:Name="SidePanel">
            <ItemsControl x:Name="CurveList">
                <ItemsControl.ItemTemplate>
                    <StaticResource ResourceKey="CurveListItemTemplate"></StaticResource>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</Window>
