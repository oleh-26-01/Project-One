<Window x:Class="Project_One.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_One"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Window.Resources>
        <DataTemplate x:Key="CurveListItemTemplate" 
                      DataType="{x:Type local:CurveViewModel}">
            <Border BorderThickness="1" BorderBrush="Black">
                <Grid ShowGridLines="False" Background="LightGray" Margin="0 0 0 1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding DisplayFileName}"
                               FontSize="16" Margin="4 2 2 2"></TextBlock>
                    <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding DisplayPointCount}"
                               FontSize="16" Margin="4 2 2 2"></TextBlock>
                    <Button Grid.Column="1" Grid.Row="0" Content="Select" Focusable="False"
                            Click="SelectCurve_OnClick" FontSize="16" Margin="1 1 0 1"
                            Foreground="#CC9900"></Button>
                    <Button Grid.Column="1" Grid.Row="1" Content="Delete" Focusable="False"
                            Click="DeleteCurve_OnClick" FontSize="16" Margin="1"
                            Foreground="#CC0000">
                    </Button>
                </Grid>
            </Border>
        </DataTemplate>
    </Window.Resources>
    <Grid x:Name="WindowGrid" ShowGridLines="False" Focusable="True" Background="DarkSlateGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="2*" MinWidth="250"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*" MinHeight="33.33" MaxHeight="40"/>
            <RowDefinition Height="95*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.Row="0" x:Name="TopPanel"
              Margin="0 0 1 1">
            <Grid x:Name="FirstTopPanel" ShowGridLines="False"
                  Background="DarkSlateGray">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" MinWidth="120"/>
                    <ColumnDefinition Width="8*" MinWidth="240"/>
                    <ColumnDefinition Width="5*" MinWidth="150"/>
                    <ColumnDefinition Width="16*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition MinHeight="33"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Column="0" Background="WhiteSmoke"
                      Margin="0,0,1,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <RadioButton Grid.Column="0" FontSize="16" Margin="3,0,3,0"
                                 HorizontalAlignment="Center" VerticalContentAlignment="Center"
                                 IsChecked="True">
                        Draw
                    </RadioButton>
                    <RadioButton Grid.Column="1" FontSize="16" Margin="0,0,3,0"
                                 HorizontalAlignment="Center" VerticalContentAlignment="Center">
                        Erase
                    </RadioButton>
                </Grid>
                
                <Grid Grid.Column="1" Background="WhiteSmoke"
                      Margin="0,0,1,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" FontSize="16"
                           HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        OptAngle:
                    </Label>
                    <Grid Grid.Column="1" Margin="0,3,3,3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Content="-" FontSize="16"></Button>
                        <TextBox Grid.Column="1" Text="0" FontSize="16"
                                 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></TextBox>
                        <Button Grid.Column="2" Content="+" FontSize="16"></Button>
                    </Grid>
                </Grid>

                <Grid Grid.Column="2" Background="WhiteSmoke"
                      Margin="0,0,1,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Clear" x:Name="ClearCurve"
                            Focusable="False" FontSize="16" Margin="3"></Button>

                    <Button Grid.Column="1" Content="Save" x:Name="SaveCurve"
                            Focusable="False" FontSize="16" Margin="0 3 3 3"></Button>
                </Grid>

                <Grid Grid.Column="3" Background="WhiteSmoke"></Grid>
            </Grid>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="0" Background="WhiteSmoke"
              Margin="0 0 0 1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Prev" x:Name="PrevPartControl"
                    Cursor="Hand" Click="ChangePart" Focusable="False"
                    Margin="1" FontSize="14"></Button>
            <TextBlock Grid.Column="1" FontSize="18"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       x:Name="PartTitle">First Part</TextBlock>
            <Button Grid.Column="2" Content="Next" x:Name="NextPartControl"
                    Cursor="Hand" Click="ChangePart" Focusable="False"
                    Margin="1" FontSize="14"></Button>
        </Grid>

        <Grid Grid.Column="0" Grid.Row="1" x:Name="CanvasGrid"
              Margin="0 0 1 0">
            <Canvas x:Name="FirstCanvas" Background="LightGray"
                    ClipToBounds="True"
                    Visibility="Visible"/>
            <Canvas x:Name="SecondCanvas" Background="Blue"
                    ClipToBounds="True"
                    Visibility="Collapsed">
            </Canvas>
            <Canvas x:Name="ThirdCanvas" Background="Green"
                    ClipToBounds="True"
                    Visibility="Collapsed">
            </Canvas>
        </Grid>

        <Grid Grid.Column="1" Grid.Row="1" x:Name="SidePanel" Background="WhiteSmoke">
            <ItemsControl x:Name="CurvesList" Focusable="False">
                <ItemsControl.ItemTemplate>
                    <StaticResource ResourceKey="CurveListItemTemplate"></StaticResource>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</Window>
