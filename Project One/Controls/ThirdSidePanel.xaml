<UserControl x:Class="Project_One.Controls.ThirdSidePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:projectOne="clr-namespace:Project_One"
             xmlns:helpers="clr-namespace:Project_One.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="200">
    <UserControl.Resources>
        <helpers:BoolToColorConverter x:Key="BoolToColorConverter"
                                         NotSelectedBrush="{StaticResource BackgroundColorBrush}"
                                         SelectedBrush="{StaticResource AccentWarningColorBrush}" />
        <!-- Assuming this DataTemplate is for the TracksList ItemsControl -->
        <DataTemplate x:Key="TrackListItemTemplate" 
                      DataType="{x:Type projectOne:TrackViewModel}"> <!-- DataType might need correction if this panel is for Genomes -->
            <Border BorderThickness="0 1 0 0" BorderBrush="{StaticResource SecondaryColorBrush}">
                <Grid ShowGridLines="False"
                      Background="{Binding IsVisible, Converter={StaticResource BoolToColorConverter}}"
                      Margin="0 0 0 0"> <!-- IsVisible binding kept, might need to be IsSelected -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="{Binding ShortInfo}"
                               Style="{StaticResource BaseTextBlockStyle}" FontSize="{StaticResource FontSizeMedium}"
                               TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" VerticalAlignment="Center" />
                    <Button Grid.Column="1" Focusable="False" Click="Select_OnClick"
                            Style="{StaticResource WarningButtonStyle}" Margin="2"
                            Content="Select" />
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid x:Name="GridContent" Background="{StaticResource BackgroundColorBrush}" MouseMove="GridContent_OnMouseMove">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*" />
            <RowDefinition Height="10" />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>

        <Expander Grid.Row="0" IsExpanded="True" 
                  Expanded="ExpanderExpand"
                  Collapsed="TracksExpanderCollapse"
                  x:Name="TracksExpander"
                  Background="{StaticResource BackgroundColorBrush}">
            <Expander.Header>
                <TextBlock x:Name="ExpanderTracksTextBlock"
                           Text="Tracks" Style="{StaticResource BaseTextBlockStyle}" FontSize="{StaticResource FontSizeLarge}" />
            </Expander.Header>
            <Expander.Content>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="TracksList" Focusable="False" Background="{StaticResource SecondaryColorBrush}">
                        <ItemsControl.ItemTemplate>
                            <StaticResource ResourceKey="TrackListItemTemplate" />
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Expander.Content>
        </Expander>

        <!-- add line -->
        <Grid Grid.Row="1" x:Name="ExpanderControlStackPanel"
                    Cursor="Hand"
                    Background="{StaticResource SecondaryColorBrush}"
                    PreviewMouseDown="StackPanelMouseClick"
                    PreviewMouseUp="StackPanelMouseClick">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="0.8*" />
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>

            <Rectangle Grid.Row="1" Grid.Column="1" Fill="{StaticResource TextColorBrush}" Height="1" />
        </Grid>

        <Expander Grid.Row="2" IsExpanded="True" x:Name="SettingsExpander"
                  Expanded="ExpanderExpand"
                  Collapsed="SettingsExpanderCollapse"
                  Background="{StaticResource BackgroundColorBrush}">
            <Expander.Header>
                <TextBlock Text="Settings" Style="{StaticResource BaseTextBlockStyle}" FontSize="{StaticResource FontSizeLarge}" />
            </Expander.Header>

            <StackPanel Margin="5">
                <TextBlock Text="Some text" Style="{StaticResource BaseTextBlockStyle}" Margin="0,0,0,5"/>
                <Button Content="Some button" Style="{StaticResource BaseButtonStyle}" />
            </StackPanel>
        </Expander>
    </Grid>



</UserControl>