<UserControl x:Class="Project_One.Controls.FirstTopPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="33" d:DesignWidth="1010">
    <UserControl.Resources>
        <!-- Local styles removed, using global styles from App.xaml -->
    </UserControl.Resources>

    <Grid ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" MinWidth="130" />
            <ColumnDefinition Width="3.4*" MinWidth="195" />
            <ColumnDefinition Width="1.4*" MinWidth="105" />
            <ColumnDefinition Width="3*" MinWidth="195" />
            <ColumnDefinition Width="3.2*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="{StaticResource SecondaryColorBrush}" Margin="0,0,1,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <RadioButton Grid.Column="0" x:Name="DrawCurve" 
                         Style="{StaticResource BaseRadioButtonStyle}"
                         Content="Draw" IsChecked="True" />
            <RadioButton Grid.Column="1" x:Name="EraseCurve" 
                         Style="{StaticResource BaseRadioButtonStyle}"
                         Content="Erase" />
        </Grid>

        <Grid Grid.Column="1" Background="{StaticResource SecondaryColorBrush}" Margin="0,0,1,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" x:Name="CurveOptAngleLabel" Content="OptAngle:" 
                   Style="{StaticResource BaseLabelStyle}" HorizontalContentAlignment="Center" />
            <Grid Grid.Column="1" Margin="0,3,3,3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" x:Name="DecreaseOptAngle" 
                        Click="DecreaseOptAngle_OnClick" Content="-" 
                        Style="{StaticResource BaseButtonStyle}" Margin="2,5,2,5" />
                <TextBox Grid.Column="1" x:Name="CurveOptAngle" 
                         Style="{StaticResource BaseTextBoxStyle}" />
                <Button Grid.Column="2" x:Name="IncreaseOptAngle" 
                        Click="IncreaseOptAngle_OnClick" Content="+" 
                        Style="{StaticResource BaseButtonStyle}" Margin="2,5,2,5" />
                <Button Grid.Column="3" x:Name="ConfirmOptAngle" 
                        Click="ConfirmOptAngle_OnClick" Content="✓" 
                        Style="{StaticResource BaseButtonStyle}" Margin="2,5,5,5" />
            </Grid>
        </Grid>

        <Label Grid.Column="2" x:Name="CurvePointsLabel" Style="{StaticResource BaseLabelStyle}" 
               Background="{StaticResource SecondaryColorBrush}" HorizontalContentAlignment="Center" Margin="0,0,1,0" />

        <Grid Grid.Column="3" Background="{StaticResource SecondaryColorBrush}" Margin="0,0,1,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" x:Name="NewCurve" Click="NewCurve_OnClick" 
                    Content="New" Style="{StaticResource WarningButtonStyle}" />
            <Button Grid.Column="1" x:Name="SaveCurve" Click="SaveCurve_OnClick" 
                    Content="Save" Style="{StaticResource SuccessButtonStyle}" />
            <Button Grid.Column="2" x:Name="ClearCurve" Click="ClearCurve_OnClick" 
                    Content="Clear" Style="{StaticResource DangerButtonStyle}" />
        </Grid>

        <Grid Grid.Column="4" Background="{StaticResource SecondaryColorBrush}" /> <!-- Removed margin, it's likely for spacing the panel itself -->
    </Grid>
</UserControl>
