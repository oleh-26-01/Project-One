<UserControl x:Class="Project_One.Controls.SecondSidePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:projectOne="clr-namespace:Project_One"
             xmlns:helpers="clr-namespace:Project_One.Helpers"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <helpers:BoolToColorConverter x:Key="BoolToColorConverter"
                                         NotSelectedBrush="{StaticResource BackgroundColorBrush}"
                                         SelectedBrush="{StaticResource AccentWarningColorBrush}" />
        <DataTemplate x:Key="TrackListItemTemplate"
                      DataType="{x:Type projectOne:TrackViewModel}">
            <Border BorderThickness="0 0 0 1" BorderBrush="{StaticResource SecondaryColorBrush}">
                <Grid ShowGridLines="False"
                      Background="{Binding IsVisible, Converter={StaticResource BoolToColorConverter}}"> <!-- Assuming IsVisible is the correct binding for selection state -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="{Binding ShortInfo}"
                               Style="{StaticResource BaseTextBlockStyle}" FontSize="{StaticResource FontSizeMedium}"
                               TextTrimming="CharacterEllipsis" TextWrapping="NoWrap" VerticalAlignment="Center" />
                    <Button Grid.Column="1" Grid.Row="0" Focusable="False" Click="View_OnClick"
                            Style="{StaticResource WarningButtonStyle}" Margin="2"
                            Content="View" />
                    <Button Grid.Column="2" Focusable="False" Click="Select_OnClick"
                            Style="{StaticResource BaseButtonStyle}" Foreground="{Binding ButtonBrush}" Margin="2"
                            Content="{Binding DisplayButtonContext}" />
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <!--<ScrollViewer.Resources>
                    <system:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">10</system:Double>
                </ScrollViewer.Resources>-->
        <ItemsControl x:Name="TracksList" Focusable="False" Background="{StaticResource SecondaryColorBrush}">
            <ItemsControl.ItemTemplate>
                <StaticResource ResourceKey="TrackListItemTemplate" />
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>